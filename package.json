{
    "name": "@qubeswap/multicall",
    "description": "Qube Multicall Contracts",
    "version": "1.0.0",
    "license": "MIT",
    "private": true,
	"files": [
	  "contracts",
      "artifacts/contracts/**/*.json",
      "!artifacts/contracts/**/*.dbg.json"
	],
	"engines": {
      "node": ">=10"
	},
	"devDependencies": {
      "@nomicfoundation/hardhat-ethers": "^3.0.6",
      "@nomiclabs/hardhat-etherscan": "^3.1.7",
	  "@nomicfoundation/hardhat-verify": "^3.0.2",
      "@nomiclabs/hardhat-waffle": "^2.0.1",
	  "@typechain/ethers-v6": "^0.5.1",
      "@types/chai": "^4.2.6",
      "@types/mocha": "^5.2.7",
      "chai": "^4.2.0",
      "decimal.js": "^10.2.1",
      "ethereum-waffle": "^3.0.2",
      "ethers": "^5.0.8",
      "hardhat": "^2.2.0",
      "hardhat-typechain": "^0.3.5",
      "hardhat-watcher": "^2.1.1",
      "mocha": "^6.2.2",
      "mocha-chai-jest-snapshot": "^1.1.0",
      "prettier": "^2.0.5",
      "prettier-plugin-solidity": "^1.0.0-alpha.59",
      "solhint": "^3.2.1",
      "solhint-plugin-prettier": "^0.0.5",
      "ts-generator": "^0.1.1",
      "ts-node": "^10.9.2",
      "typechain": "^8.3.2",
      "typescript": "^5.5.2"
	},
    "scripts": {
        "compile": "npx hardhat compile",
		"deploy_QubeInterfaceMulticallV2Sei": "npx hardhat run --network seiMainnet scripts/sei/deploy_QubeInterfaceMulticallV2.ts",
		"deploy_Multicall3Sei": "npx hardhat run --network seiMainnet scripts/sei/deploy_Multicall3.ts",
		
		"deploy_QubeInterfaceMulticallV2Monad": "npx hardhat run --network monadMainnet scripts/monad/deploy_QubeInterfaceMulticallV2.ts",
		"deploy_Multicall3Monad": "npx hardhat run --network monadMainnet scripts/monad/deploy_Multicall3.ts",
		
		"deploy_QubeInterfaceMulticallV2Tics": "npx hardhat run --network ticsMainnet scripts/tics/deploy_QubeInterfaceMulticallV2.ts",
		"deploy_Multicall3Tics": "npx hardhat run --network ticsMainnet scripts/tics/deploy_Multicall3.ts",
		
		"deploy_QubeInterfaceMulticallV2Bsc": "npx hardhat run --network bscMainnet scripts/bsc/deploy_QubeInterfaceMulticallV2.ts",
		"deploy_Multicall3Bsc": "npx hardhat run --network bscMainnet scripts/bsc/deploy_Multicall3.ts",
		
		"deploy_QubeInterfaceMulticallV2Avax": "npx hardhat run --network avaxMainnet scripts/avax/deploy_QubeInterfaceMulticallV2.ts",
		"deploy_Multicall3Avax": "npx hardhat run --network avaxMainnet scripts/avax/deploy_Multicall3.ts",
	
		"clean": "rm -rf node_modules",
		"reset": "rm -rf node_modules && rm -rf artifacts && rm -rf typechain-types && rm -rf abi && rm -rf cache",
        "test": "npx hardhat test",
        "test:coverage": "npx hardhat coverage",
        "test:size-contracts": "npx hardhat size-contracts"
    }
}